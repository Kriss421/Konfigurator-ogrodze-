@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
<header>
    <nav>
        <a href=@Url.Action("StronaPomoc", "Pomoc")>Pomoc</a>
        <a href=@Url.Action("StronaKontakt", "Kontakt")>Kontakt</a>
    </nav><br>
        <h1 class="display-4">Zaprojektuj swoje ogrodzenie razem z nami!</h1>
</header>
<center>
    <div class="image-container">
        <img src="~/dom1.jpg" alt="Przykładowy ogródek" /><br /><br />
        <h1 class="image-text">Konfigurator ogrodzeń</h1><br /><br />
    </div>
</center>
<p>Wybierz wzór gotowego domu:</p>
<input type="file" id="gotowedomy" accept="image/*" onchange="handleImageUpload(event)">


<div class="options">
    <label for="typ">Typ ogrodzenia:</label>
    <select id="typ">
        <option value="brak">-</option>
        <option value="pionowe">Pionowe</option>
        <option value="poziome">Poziome</option>
    </select><br />
    <label for="kolor">Kolor:</label>
    <select id="kolor">
        <option value="brak">-</option>
        <option value="czarny">RAL 9005 Mat</option>
        <option value="szary">Antracyt DB</option>
        <option value="biały">RAL 6005 Mat</option>
        <select>
            <br>
            <label for="rodzaj">Rodzaj ogrodzenia:</label>
            <select id="rodzaj">
                <option value="brak">-</option>
                <option value="kraty">Kraty</option>
                <option value="siatka">Siatka</option>
                <option value="panele">Panele</option>
                <option value="profil1">Profil 30x30</option>
                <option value="profil2">Profil 40x30</option>
                <option value="profil3">Profil 10x30</option>
                <option value="dystrybutor2">Własny</option>
            </select>
            <br>
            <label for="material">Materiał:</label>
            <select id="material">
                <option value="brak">-</option>
                <option value="stal">Stal ocynkowana</option>
                <option value="stal">Stal czarna</option>
                <option value="aluminium">Aluminium</option>
                <option value="drewno">Drewno</option>
                <option value="dystrybutor3">Własny</option>
            </select>
            <br>
            <br>

</div>
<br />

<ul class="flex-container">
    <li class="flex-item" id="wycena" type="submit">
            <a href="@Url.Action("FormularzKontaktowy", "Formularz")">Wyceń ogrodzenie</a>
    </li>
    <li class="flex-item" id="zapisz" type="submit">Zapisz konfiguracje</li>
    <li class="flex-item" id="zobacz" type="submit">Zobacz specyfikację wzoru</li>

</ul>

<hr>
<div class="text-success">
</div>
<div class="footer">

    2023 &copy; Wszelkie prawa zastrzeżone.

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
